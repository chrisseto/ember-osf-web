{{registries-title}}

{{#if this.showMobileNav}}
    {{#nav-bar as |nav|}}
        {{#nav.section}}

            {{#nav.button onclick=(action 'toggleSidenav')}}
                {{nav.icon (if this.sidenavGutterClosed 'bars' 'times')}}
            {{/nav.button}}

        {{/nav.section}}

        {{#nav.section}}

            {{#nav.button}}
                Public
                {{nav.icon 'eye'}}
            {{/nav.button}}

            {{nav.divider}}

            {{#nav.button onclick=(action 'toggleMetadata')}}
                {{nav.icon 'info-circle'}}
            {{/nav.button}}

            {{nav.divider}}

            {{#nav.button}}
                {{nav.icon 'ellipsis-v'}}
            {{/nav.button}}

        {{/nav.section}}
    {{/nav-bar}}
{{/if}}

<div local-class="Container {{if (media 'isDesktop') 'Desktop'}}">

    {{#side-gutter 'left' closed=this.sidenavGutterClosed mode=this.sidenavGutterMode}}
        {{#registries-sidenav class=(local-class 'SideNav') as |nav|}}
            {{nav.link 'home' 'OVERVIEW' active=true}}
            {{nav.link 'file-text' 'FILES' count=50}}
            {{nav.link 'window-maximize' 'WIKI' count=0}}
            {{nav.link 'puzzle-piece' 'COMPONENTS' count=3}}
            {{#nav.link 'link' 'LINKS' count=2 as |test|}}
                This Is A test
            {{/nav.link}}
            {{nav.link 'bar-chart' 'ANALYTICS'}}
            {{nav.link 'comments' 'COMMENTS'}}

            {{#nav.content}}
                I'm Content!
            {{/nav.content}}

            {{nav.toggler}}

        {{/registries-sidenav}}
    {{/side-gutter}}

    <div local-class="Body {{this.animationClass}}">
        {{registration-schema-view this.model.registrationSchema.schema this.model.registeredMeta}}
    </div>

    {{#side-gutter 'right' closed=this.metadataGutterClosed mode=this.metadataGutterMode}}
        {{registries-metadata}}
    {{/side-gutter}}
</div>
